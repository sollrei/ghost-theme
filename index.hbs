{{!< default}}

{{> 'site-header'}}

<main class="main">
    <div class="layout">
        <div class="pure-g">
            <div class="pure-u-1-1 pure-u-md-17-24">
                <div class="post-list">
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                </div>
                {{pagination}}
            </div>
            <div class="pure-u-1-1 pure-u-md-7-24">
                {{> "site-aside"}}
            </div>
        </div>
    </div>
</main>